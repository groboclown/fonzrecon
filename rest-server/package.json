{
  "name": "fonzrecon-rest",
  "version": "0.0.1",
  "description": "The FonzRecon Peer Recongition REST API Server",
  "main": "app.js",
  "scripts": {
    "start": "node ./bin/www",
    "test": "mocha",
    "jscs": "jscs",
    "jshint": "jshint",
    "pretest": "jscs"
  },
  "config": {
    "port": "3000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/groboclown/fonzrecon.git"
  },
  "keywords": [
    "peer-recognition"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/groboclown/fonzrecon/issues"
  },
  "homepage": "https://github.com/groboclown/fonzrecon#readme",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.16.1",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "crypto": "0.0.3",
    "csurf": "^1.9.0",
    "express": "^4.14.1",
    "jsonwebtoken": "^7.3.0",
    "jwt-simple": "^0.5.1",
    "mongoose": "^4.8.4",
    "morgan": "^1.8.1",
    "passport": "^0.3.2",
    "passport-http": "^0.3.0",
    "passport-http-oauth": "^0.1.3",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "jscs": "^3.0.7",
    "jshint": "^2.9.4",
    "mocha": "^3.2.0",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "jshint",
    "jscs"
  ],
  "jscsConfig": {
    "preset": "node-style-guide",
    "excludeFiles": [
      "nothing-to-exclude"
    ],
    "requireCurlyBraces": true,
    "requirePaddingNewLinesAfterUseStrict": true,
    "validateLineBreaks": false,
    "maximumLineLength": {
      "value": 280,
      "allExcept": [
        "urlComments",
        "functionSignature",
        "require",
        "regex"
      ]
    }
  },
  "jshintConfig": {
    "node": true,
    "esversion": 6,
    "sub": true,
    "strict": "global",
    "laxbreak": true
  }
}
